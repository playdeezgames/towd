@model IEnumerable<Towditor.Web.EFModel.Creatures>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bitmap)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bitmap.BitmapId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CreatureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CreatureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CreatureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
