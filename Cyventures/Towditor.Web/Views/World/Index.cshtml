@model IEnumerable<Towditor.Web.EFModel.Worlds>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorldName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorldName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorldId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorldId">Details</a> |
                <a asp-action="WorldIndex" asp-controller="WorldTerrain" asp-route-worldid="@item.WorldId">Terrains</a> |
                <a asp-action="WorldIndex" asp-controller="WorldCreature" asp-route-worldid="@item.WorldId">Creatures</a> |
                <a asp-action="Delete" asp-route-id="@item.WorldId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
