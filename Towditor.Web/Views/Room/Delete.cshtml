@model Towditor.Web.EFModel.Rooms

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rooms</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RoomName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.World)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.World.WorldName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Details" asp-controller="World" asp-route-id="@Model.WorldId">Back to World</a>
