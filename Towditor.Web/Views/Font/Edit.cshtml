@model Towditor.Web.EFModel.Fonts

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Fonts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FontId" />
            <div class="form-group">
                <label asp-for="FontName" class="control-label"></label>
                <input asp-for="FontName" class="form-control" />
                <span asp-validation-for="FontName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FontHeight" class="control-label"></label>
                <input asp-for="FontHeight" class="form-control" />
                <span asp-validation-for="FontHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
