@model Towditor.Web.EFModel.Creatures

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Creatures</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatureName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatureName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Bitmap)
        </dt>
        <dd>
            @Model.Bitmap.BitmapSequence.BitmapSequenceName<span>#</span>@Model.Bitmap.BitmapIndex
        </dd>
        <dt>
            Bitmap Image
        </dt>
        <dd>
            <img src="@Url.Action("Render","BitmapImage",new { id=Model.Bitmap.BitmapId, scale=8 })" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CreatureId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
